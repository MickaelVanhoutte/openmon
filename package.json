{
	"name": "openmon",
	"private": true,
	"version": "1.0.0",
	"description": "A Pokemon-style web game built with Svelte 5",
	"author": "Mickael Vanhoutte",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build && rm -rf docs && mkdir docs && mkdir docs/src && cp -R dist/ docs && cp -R src/assets docs/src && rm -rf \"docs/src/assets/tileset/HGSS for RMXP\"",
		"preview": "vite preview",
		"lint": "eslint src/",
		"lint:fix": "eslint src/ --fix",
		"format": "prettier --write \"src/**/*.{ts,js,svelte,css,scss}\"",
		"format:check": "prettier --check \"src/**/*.{ts,js,svelte,css,scss}\"",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"test": "vitest",
		"test:run": "vitest run",
		"test:abilities": "vitest run src/js/__tests__/abilities/",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"generate:sprite-anchors": "node scripts/generate-sprite-anchors.mjs",
		"extract:tiles": "node scripts/extract-tiles.mjs",
		"copy:shiny-sprites": "node scripts/copy-shiny-sprites.mjs",
		"graph": "npx depcruise src --include-only '^src' --no-config -T  dot | dot -T svg | npx depcruise-wrap-stream-in-html > dependency-graph.html && open dependency-graph.html"
	},
	"devDependencies": {
		"@abraham/reflection": "^0.13.0",
		"@anatine/esbuild-decorators": "^0.2.19",
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.58.1",
		"@rollup/plugin-typescript": "^12.3.0",
		"@sjmc11/tourguidejs": "^0.0.27",
		"@svelte-put/inline-svg": "^4.0.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tsconfig/svelte": "^5.0.6",
		"@types/gsap": "^3.0.0",
		"@types/howler": "^2.2.11",
		"@types/node": "^25.2.0",
		"@types/three": "^0.183.0",
		"@vitest/coverage-v8": "^4.0.17",
		"dependency-cruiser": "^17.3.6",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.0.0",
		"graphviz": "^0.0.9",
		"image-size": "^2.0.2",
		"jsdom": "^27.4.0",
		"node-graphviz": "^0.1.1",
		"pngjs": "^7.0.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"sass": "^1.97.3",
		"svelte": "^5.48.0",
		"svelte-check": "^4.3.5",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1",
		"vite": "^7.3.1",
		"vite-plugin-pwa": "^1.2.0",
		"vitest": "^4.0.17"
	},
	"engines": {
		"node": ">=22.0.0",
		"npm": ">=10.5.1"
	},
	"dependencies": {
		"@abraham/reflection": "^0.13.0",
		"@anatine/esbuild-decorators": "^0.2.19",
		"@svgdotjs/svg.js": "^3.2.5",
		"@threlte/core": "^8.3.1",
		"@threlte/extras": "^9.7.1",
		"@types/seedrandom": "^3.0.8",
		"chart.js": "^4.5.1",
		"chota": "^0.9.2",
		"gsap": "^3.14.2",
		"honeycomb-grid": "^4.1.5",
		"howler": "^2.2.4",
		"postprocessing": "^6.38.2",
		"seedrandom": "^3.0.5",
		"svelte-dnd-action": "^0.9.69",
		"three": "^0.183.0",
		"tsyringe": "^4.10.0"
	}
}
