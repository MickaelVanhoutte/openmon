{
  "name": "openmon",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "vite build && rm -rf docs && mkdir docs && mkdir docs/src && cp dist/openmon.js docs && cp -R src/assets docs/src && cp final/index.html docs && mkdir docs/static && cp -R static/* docs/static",
    "preview": "vite preview",
    "graph": "npx depcruise src --include-only '^src' --no-config -T  dot | dot -T svg | npx depcruise-wrap-stream-in-html > dependency-graph.html && open dependency-graph.html",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "devDependencies": {
    "@abraham/reflection": "^0.12.0",
    "@anatine/esbuild-decorators": "^0.2.19",
    "@rollup/plugin-typescript": "^11.1.6",
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^5.0.2",
    "dependency-cruiser": "^16.2.3",
    "graphviz": "^0.0.9",
    "node-graphviz": "^0.1.1",
    "sass": "^1.69.5",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "type": "module",
  "dependencies": {
    "@abraham/reflection": "^0.12.0",
    "@anatine/esbuild-decorators": "^0.2.19",
    "animejs": "^3.2.2",
    
    "chart.js": "^4.4.1",
    "svelte-dnd-action": "^0.9.40",
    "tsyringe": "^4.8.0"
  }
}
